{
    "name": "extensionswitcher",
    "displayName": "Extension Switcher",
    "description": "Iterate through file extensions e.g. .cpp -> .inl -> .h",
    "version": "0.0.1",
    "publisher": "cdyson37",
    "repository": {
        "type": "git",
        "url": "https://github.com/cdyson37/vscode-extensionswitcher.git"
    },
    "engines": {
        "vscode": "^1.19.0"
    },
    "license": "MIT",
    "categories": [
        "Other"
    ],
    "keywords": [
        "extension",
        "header",
        "open",
        "switch",
        "keybindings"
    ],
    "activationEvents": [
        "onCommand:extensionswitcher.switch"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extensionswitcher.switch",
                "title": "Switch extension"
            }
        ],
        "keybindings": [
            {
                "command": "extensionswitcher.switch",
                "key": "ctrl+7",
                "mac": "cmd+7",
                "when": "editorTextFocus"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "ExtensionSwitcher config",
            "properties": {
                "extensionswitcher.extensions": {
                    "type": "array",
                    "default": [
                        ".cpp",
                        ".inl",
                        ".h"
                    ],
                    "description": "Iterate through these file extensions"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.48",
        "@types/node": "^7.0.64",
        "typescript": "^2.8.3",
        "vscode": "^1.1.17"
    }
}
